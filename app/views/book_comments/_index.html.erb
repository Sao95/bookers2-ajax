<% book.book_comments.each do |book_comment| %>
  <tr>
    <td class: "user_#{book_comment_user.id}">
      <%= attachment_image_tag(book_comment.user, :profile_image, :fill, 50, 50, fallback: "no-image-icon.jpg") %>
            
        <%= book_comment.comment %>
            
        <% if book.user == current_user %>
          <%= link_to 'Destroy', book_book_comment_path(book_comment.book, book_comment), method: :delete, remote: true, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger destroy_book_#{book.id}"%>
        <% end %>
        <br>
        <%= link_to user_path(book.user) do %>
          <%= book_comment.user.name %>
        <% end %>
    </td>
  </tr>
<% end %>
      